<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculadora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name = "Number_Button">
        <item name = "android:textSize">30sp</item>
        <item name = "android:textColor">@color/numbers</item>
        <item name = "android:backgroundTint">@color/background_btn</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">80dp</item>
    </style>

    <style name = "Operator_Button">
        <item name = "android:textSize">30sp</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:backgroundTint">@color/background_btn</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">80dp</item>
    </style>


</resources>